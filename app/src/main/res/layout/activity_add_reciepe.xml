<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/itemImage"
        android:layout_width="140dp"
        android:layout_height="181dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/eggbob"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/itemName"
        android:layout_width="101dp"
        android:layout_height="30dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/roundrectangle_border"
        android:gravity="center"
        android:hint="간장계란밥"
        app:layout_constraintStart_toEndOf="@+id/itemImage"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/itemType"
        android:layout_width="92dp"
        android:layout_height="25dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/roundrectangle_border"
        android:gravity="center"
        android:hint="한식"
        app:layout_constraintStart_toStartOf="@+id/needList"
        app:layout_constraintTop_toBottomOf="@+id/itemName" />

    <TextView
        android:id="@+id/searchBar"
        android:layout_width="136dp"
        android:layout_height="35dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/roundrectangle_border"
        android:gravity="center"
        android:text="재료 선택"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/itemImage" />

    <EditText
        android:id="@+id/itemAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/roundrectangle_border"
        android:gravity="center"
        android:hint="수량 입력"
        app:layout_constraintStart_toEndOf="@+id/searchBar"
        app:layout_constraintTop_toBottomOf="@+id/needList" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/ingredientAddBtn"
        android:layout_width="65dp"
        android:layout_height="38dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/button_gray"
        android:text="확인"
        app:layout_constraintStart_toEndOf="@+id/itemAmount"
        app:layout_constraintTop_toBottomOf="@+id/needList" />

    <EditText
        android:id="@+id/itemDescribe"
        android:layout_width="289dp"
        android:layout_height="141dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/roundrectangle_border"
        android:gravity="center_horizontal"
        android:hint="상세 정보 입력"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/IngredientList" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/addBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="108dp"
        android:background="@drawable/button_orange"
        android:text="레시피 추가"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/itemDescribe" />

    <ListView
        android:id="@+id/IngredientList"
        android:layout_width="291dp"
        android:layout_height="175dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ingredientAddBtn" />

    <ListView
        android:id="@+id/needList"
        android:layout_width="163dp"
        android:layout_height="114dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@+id/itemImage"
        app:layout_constraintTop_toBottomOf="@+id/itemType" />


</androidx.constraintlayout.widget.ConstraintLayout>