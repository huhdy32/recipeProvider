<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#57A2FF"
                android:endColor="#57A2FF"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="#57A2FF" />
            <corners
                android:radius="20dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp"/>
        </shape>
    </item>


    <item>
        <shape>
            <gradient
                android:startColor="#57A2FF"
                android:endColor="#57A2FF"
                android:angle="90" />
            <stroke
                android:width="2dp"
                android:color="#57A2FF" />
            <corners
                android:radius="20dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp"/>
        </shape>
    </item>
</selector>